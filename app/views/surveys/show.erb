

 <!-- Content Section
    ================================================== -->

  <h1> Here is your Survey Title: </h1>
  <h1><%= @survey.title %></h1>
  <a href=<%="/surveys/#{@survey.id}/form"%>>Generate Survey</a>
  <br>
  <a href=<%="/surveys/#{@survey.id}/results"%>>View Current Survey Results</a>

  <form action="/surveys/<%= @survey.id %>" method="post">
    <input type="hidden" name="_method" value="delete"></input>
    <button type="submit"> Delete Your Survey</button>
  </form>

  <h2>Below are the questions on your Survey:</h2>
  <ol>
    <% @survey.questions.each do |quest|%>
    <li><a href=<%="/surveys/#{@survey.id}/questions/#{quest.id}"%>><%= "#{quest.content}"%></a></li>
    <%end %>
  </ol>
<br>
<br>
<h2> Why Don't you add a new question?</h2>
<form action=<%="/surveys/#{@survey.id}/questions/new"%> method="post">
  <input type="text" name="content" placeholder="new question"></input>
  <input type="submit" value="submit"/>
</form>

<a href="/surveys/<%= @survey.id %>/edit"> Feel free to Edit your Survey </a>
